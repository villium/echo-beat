{
  "name": "@villium/echo-beat",
  "version": "0.1.0",
  "description": "Beat detection, tempo analysis and rhythm pattern recognition",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.6.3",
    "vitest": "^2.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Villium",
  "repository": {
    "type": "git",
    "url": "https://github.com/villium/echo.git",
    "directory": "packages/pulse-rhythm"
  },
  "keywords": [
    "audio",
    "beat-detection",
    "tempo",
    "rhythm",
    "bpm",
    "onset-detection"
  ]
}